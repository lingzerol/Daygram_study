<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/content_day_background">
    <LinearLayout
        android:layout_width="370dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dairy_option_week"
                android:layout_width="40dip"
                android:layout_height="24dip"
                android:background="@drawable/icon"
                android:gravity="center"
                android:layout_margin="0dip"
                android:text="SAT" />
            <View
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"/>
            <TextView
                android:id="@+id/dairy_option_day"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:gravity="center_horizontal"
                android:text="8"
                android:layout_margin="0dip"
                android:textSize="28dp" />
        </LinearLayout>
        <View
            android:background="@android:color/black"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/dairy_option_content"
            android:layout_width="320dip"
            android:layout_height="64dip"
            android:layout_marginLeft="8dip"
            android:text="好好好好好好好好好好好好好好好好好好好好"
            android:textSize="15dp" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>