<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPaper"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/daygram_top"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/transparent"
        android:orientation="vertical"
        >

        <TextView
            android:text="haha"
            android:textSize="20sp"
            android:textStyle="normal"
            android:id="@+id/daygram_time_week"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
          />
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dip">
            <TextView
                android:gravity="center"
                android:text="haha"
                android:background="@color/transparent"
                android:id="@+id/daygram_time_md"
                android:textStyle="bold"
                android:paddingStart="10dip"
                android:paddingEnd="10dip"
                android:layout_width="wrap_content"
                android:layout_height="30dip" />
            <View
                android:background="@android:color/black"
                android:layout_width="1dip"
                android:layout_height="10dip"/>
            <TextView
                android:gravity="center"
                android:text="haha"
                android:background="@color/transparent"
                android:id="@+id/daygram_time_hms"
                android:paddingStart="10dip"
                android:paddingEnd="0dip"
                android:textColor="@color/colorShallowBlack"
                android:layout_width="wrap_content"
                android:layout_height="30dip" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/dairy_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="20dip"
        android:listSelector="@drawable/daygram_list_selector"
        ></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dip"
        />
    <LinearLayout
        android:id="@+id/daygram_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>
</LinearLayout>